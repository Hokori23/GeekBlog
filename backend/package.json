{
  "name": "prodesign-backend",
  "version": "1.0.0",
  "private": true,
  "main": "/bin/www.js",
  "scripts": {
    "compile": "npm run build && node --inspect ./build/bin/www.js",
    "serve": "cross-env NODE_ENV=production nodemon ./build/bin/www.js",
    "dev": "cross-env NODE_ENV=development nodemon -e ts --exec \"npm run compile\"",
    "build": "ttsc && npm run build:other",
    "build:force": "rm -r-f ./build && ttsc && npm run build:other",
    "build:other": "node ./build/scripts/build.js",
    "build:template": "node ./build/scripts/build_template.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hokori23/Pro_design.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hokori23/Pro_design/issues"
  },
  "homepage": "https://github.com/Hokori23/Pro_design#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.5",
    "express": "~4.16.1",
    "express-jwt": "^6.0.0",
    "express-sequelize-crud": "^6.1.5",
    "jsonwebtoken": "^8.5.1",
    "juice": "^7.0.0",
    "moment": "^2.29.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.12",
    "omit.js": "^2.0.2",
    "precss": "^4.0.0",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.11",
    "@types/express-jwt": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.11.4",
    "@types/nodemailer": "^6.4.1",
    "@types/validator": "^13.1.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7",
    "husky": "^4.3.8",
    "lint-staged": "^12.4.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.0.3",
    "eslint": "^8.14.0",
    "eslint-config-alloy": "^4.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS || (node ../.scripts/pre_commit.cjs && exit 8)",
      "post-merge": "sh ../.scripts/update_dependencies.sh"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mjsx,cjs,cjsx}": [
      "eslint --fix --color",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
